# Internet
ifconfig eth0 135.207.157.200/16

# ECONET
ifconfig eth1 172.16.0.1/24

# EDMZNET
ifconfig eth2 172.17.0.1/24

# EXTNET
ifconfig eth3 172.18.0.1/24

# MGMTNET
ifconfig eth4 172.19.0.1/24

route add -net 10.1.0.0/21 gw 172.16.0.2
route add -net 10.2.0.0/21 gw 172.16.0.2
route add -net 10.3.0.0/24 gw 172.16.0.2
route add -net 10.4.0.0/24 gw 172.16.0.2

route add default gw 135.207.157.254

# iptables rule for natting all packets out to the internet 
iptables -t nat -A POSTROUTING -o eth0 ! -d 172.17.0.0/24 -j SNAT --to 135.207.157.200

# Port forward traffic Mail server
iptables -t nat -A PREROUTING -i eth0 -p tcp --dport 25 -j DNAT --to-destination 172.17.0.11
iptables -t nat -A PREROUTING -i eth0 -p tcp --dport 587 -j DNAT --to-destination 172.17.0.11
iptables -t nat -A PREROUTING -i eth0 -p tcp --dport 993 -j DNAT --to-destination 172.17.0.11

# Port forward traffic OpenVPN server
#iptables -t nat -A PREROUTING -i eth0 -p udp --dport 1194 -j DNAT --to-destination 172.16.0.2

# Hide managemement network infrastructure from rest of the network
iptables -t nat -A POSTROUTING -s 172.19.0.0/24 -d 172.17.0.0/24 -j SNAT --to 172.17.0.1
iptables -t nat -A POSTROUTING -s 172.19.0.0/24 -d 172.18.0.0/24 -j SNAT --to 172.18.0.1
iptables -t nat -A POSTROUTING -s 172.19.0.0/24 -d 10.1.0.0/24 -j SNAT --to 172.19.0.1

# Nating the packets from Core-Router to External DMZ
iptables -A FORWARD -s 172.16.0.2 -d 172.17.0.0/24 -j ACCEPT
iptables -A FORWARD -s 172.17.0.0/24 -d 172.16.0.2 -j ACCEPT


#FILTERS
# Block everything by default (whitelisting)
iptables -P FORWARD DROP


# Allow commlink between Enterprise Zone and External DMZ (Allow port 25,587,993 for Mail server traffic, Allow 3128,3129 for Squid proxy traffic)
# Staff network
iptables -A FORWARD -i eth1 -o eth2 -s 10.1.0.0/21 -d 172.17.0.0/24 -p tcp --match multiport --dports 25,587,993,3128,3129 -j ACCEPT
iptables -A FORWARD -i eth2 -o eth1 -m state --state ESTABLISHED,RELATED -j ACCEPT
# Volunteer network
iptables -A FORWARD -i eth1 -o eth2 -s 10.2.0.0/21 -d 172.17.0.0/24 -p tcp --match multiport --dports 25,587,993,3128,3129 -j ACCEPT
iptables -A FORWARD -i eth2 -o eth1 -m state --state ESTABLISHED,RELATED -j ACCEPT


